{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div>
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Mouvements RBUE</h1>
					</div>
					{{ form_start(form) }}
					<div class='d-flex'>
						<div class="p-1 mt-2">
							Veuillez selectionner la période :
						</div>
						<div class="p-1">
							{{ form_widget(form.startDate) }}
						</div>
						<div class="p-1">
							{{ form_widget(form.endDate) }}
						</div>
						<div class="p-1">
							{{ form_row(form.filtrer, { 'attr' : { 'class' : 'btn btn-xl btn-secondary' }}
							) }}
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
		<div class="row">
			<div class="col-md-12">
				<div class="card card-gray">
					<div class="card-header">
						<h3 class="card-title text-center">Mouvements RBUE</h3>
					</div>
					<!-- /.card-header -->
					<div class="card-body">
						{% if mouvs %}
							<table id="example1" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th class="text-center">
											<span>Tiers</span>
										</th>
										<th class="text-center">
											<span>Date Cmd</span>
										</th>
										<th class="text-center">
											<span>Notre Ref</span>
										</th>
										<th class="text-center">
											<span>Cmd</span>
										</th>
										<th class="text-center">
											<span>Bl</span>
										</th>
										<th class="text-center">
											<span>Facture</span>
										</th>
										<th class="text-center">
											<span>Ref</span>
										</th>
										<th class="text-center">
											<span>Sref1</span>
										</th>
										<th class="text-center">
											<span>Sref2</span>
										</th>
										<th class="text-center">
											<span>Désignation</span>
										</th>
										<th class="text-center">
											<span>Famille</span>
										</th>
										<th class="text-center">
											<span>Qte</span>
										</th>
									</tr>
								</thead>
								<tbody>
									{% for mouv in mouvs %}
										<tr>
											<td class="text-center">
												<a class="text-dark">{{ mouv.tiers }}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.dateCmd|date("Y/m/d")}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.notreRef}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.cmd }}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.bl}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.facture}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.ref}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.sref1}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.sref2}}</a>
											</td>
											<td class="text-left">
												<a class="text-dark">{{ mouv.designation}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.famille}}</a>
											</td>
											<td class="text-center">
												<a class="text-dark">{{ mouv.qte}}</a>
											</td>

										{% endfor %}
									</tr>
								</tbody>
							</table>
						{% else %}
							<h4 class="text-left text-dark">
								<i class="fas fa-info-circle pr-2 text-primary"></i>Aucune élément à afficher, veuillez selectionner les filtres
							</h4>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
