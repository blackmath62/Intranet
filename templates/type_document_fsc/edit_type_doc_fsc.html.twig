{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}

	<div
		class="col-md-12">
		<!-- general form elements disabled -->
		<div class="card card-dark">
			<div class="card-header d-flex">
				<h3 class="card-title text-white">Modification d'un type de document FSC</h3>
				<a href="{{ path('app_type_document_fsc') }}" class="badge badge-success ml-auto">Retourner Ã  la liste des type de document FSC</a>
			</div>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form">
					<div class="row">
						<div class="form-group col-12 col-md-2">
							{{ form_row(form.title, {'attr' : {'class' : "form-control"}})}}
						</div>
						<div class="form-group col-12 col-md-2">
							{{ form_row(form.color, {'attr' : {'class' : "form-control my-colorpicker2 colorpicker-element"}})}}
						</div>
						<div class="form-group col-12 col-md-2">
							{{ form_row(form.icone, {'attr' : {'class' : "form-control"}})}}
						</div>
					</div>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
</div>{% endblock %}
