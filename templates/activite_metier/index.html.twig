{% extends 'base.html.twig' %}

{% block title %}Activité par Métier
{% endblock %}

{% block body %}
	{% if total %}
		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-md-6">

						<!-- DONUT CHART -->
						<div class="card card-lightblue">
							<div class="card-header">
								<h3 class="card-title">Activité par famille de produit</h3>

								<div class="card-tools">
									<button type="button" class="btn btn-tool" data-card-widget="collapse">
										<i class="fas fa-minus"></i>
									</button>
									<button type="button" class="btn btn-tool" data-card-widget="remove">
										<i class="fas fa-times"></i>
									</button>
								</div>
							</div>
							<div class="card-body">
								<canvas id="donutProduit"></canvas>
							</div>
							<!-- /.card-body -->
						</div>
						<!-- /.card -->

						<!-- /.card -->

					</div>
					<!-- /.col (LEFT) -->
					<div
						class="col-md-6">
						<!-- PIE CHART -->
						<div class="card card-olive">
							<div class="card-header">
								<h3 class="card-title">Activité par famille de client</h3>
								<div class="card-tools">
									<button type="button" class="btn btn-tool" data-card-widget="collapse">
										<i class="fas fa-minus"></i>
									</button>
									<button type="button" class="btn btn-tool" data-card-widget="remove">
										<i class="fas fa-times"></i>
									</button>
								</div>
							</div>
							<div class="card-body">
								<canvas id="donutClient"></canvas>
							</div>
							<!-- /.card-body -->
						</div>
					</div>
					<!-- /.col (RIGHT) -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
	{% endif %}


	<div class="row">
		<div class="col-md-12">
			<div class="card card-dark">
				<div class="card-header d-flex bd-highlight">
					<div class="p-2 flex-grow-1 bd-highlight">
						<h3 class="card-title text-center">Activité par Métier
							{% if total %}
								{{ total.total }}
								€
							{% endif %}
						</h3>
					</div>
					<div class="p-2 bd-highlight">
						{{ form_start(form) }}
						<div class='d-flex'>
							<div class="p-1 mt-2">
								Veuillez selectionner la période :
							</div>
							<div class="p-1">
								{{ form_widget(form.start) }}
							</div>
							<div class="p-1">
								{{ form_widget(form.end) }}
							</div>
							<div class="p-1">
								{{ form_widget(form.Metiers) }}
							</div>
							<div class="p-1">
								{{ form_row(form.filtrer, { 'attr' : { 'class' : 'btn btn-xl btn-secondary' }}
								) }}
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
				<!-- /.card-header -->
				<div class="card-body">
					<div class="card card-lightblue">
						<div class="card-header d-flex bd-highlight">
							<div class="p-2 flex-grow-1 bd-highlight">
								<h3 class="card-title text-center">Activité Produits par Métier
									{% if total %}
										{{ total.total }}
										€
									{% endif %}
								</h3>
							</div>
						</div>
						<table id="example1" class="table table-bordered table-striped">
							<thead>
								<tr class="text-center">
									<th>Famille produit</th>
									<th>Ref</th>
									<th>Désignation</th>
									<th>Montant</th>
									<th>%</th>
								</tr>
							</thead>
							<tbody class="text-center">
								{% if activites %}
									{% for activite in activites %}
										<tr>
											<td>{{ activite.famille }}</td>
											<td>{{ activite.ref }}</td>
											<td class="text-left">{{ activite.des }}</td>
											<td>{{ activite.montantSign }}</td>
											{% if total %}
												{% set tot = activite.montantSign * 100 / total.total %}
												<td>{{ tot|number_format(2, '.', ' ') }}</td>
											{% endif %}
										</tr>
									{% endfor %}
								{% else %}
									<tr>
										<td colspan="10">Pas de données à afficher</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</div>
				<div class="card-body">

					<div class="card card-olive">
						<div class="card-header d-flex bd-highlight">
							<div class="p-2 flex-grow-1 bd-highlight">
								<h3 class="card-title text-center">Activité clients par Métier
									{% if total %}
										{{ total.total }}
										€
									{% endif %}
								</h3>
							</div>
						</div>
						<table id="example2" class="table table-bordered table-striped">
							<thead>
								<tr class="text-center">
									<th>Famille client</th>
									<th>Code Client</th>
									<th>Nom</th>
									<th>Montant</th>
									<th>%</th>
								</tr>
							</thead>
							<tbody class="text-center">
								{% if activiteClients %}
									{% for activiteClient in activiteClients %}
										<tr>
											<td>{{ activiteClient.famille }}</td>
											<td>{{ activiteClient.tiers }}</td>
											<td class="text-left">{{ activiteClient.nom }}</td>
											<td>{{ activiteClient.montantSign }}</td>
											{% if total %}
												{% set tot = activiteClient.montantSign * 100 / total.total %}
												<td>{{ tot|number_format(2, '.', ' ') }}</td>
											{% endif %}
										</tr>
									{% endfor %}
								{% else %}
									<tr>
										<td colspan="10">Pas de données à afficher</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}

	<script>
		$(function () {
$("#example1").DataTable({
"responsive": true,
"lengthChange": false,
"autoWidth": false,
"order": [
[3, "desc"]
],
"buttons": [
"copy",
"csv",
"excel",
"pdf",
"print",
"colvis"
]
}).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
$("#example3").DataTable({
"responsive": true,
"lengthChange": false,
"autoWidth": false,
"order": [
[0, "desc"]
],
"buttons": [
"copy",
"csv",
"excel",
"pdf",
"print",
"colvis"
]
}).buttons().container().appendTo('#example3_wrapper .col-md-6:eq(0)');
$('#example2').DataTable({
"paging": true,
"lengthChange": false,
"searching": false,
"ordering": false,
"info": true,
"autoWidth": false,
"responsive": true
});
});
	</script>

	<script>
		var ctx = document.getElementById('donutProduit').getContext('2d');
var myChart = new Chart(ctx, {
type: 'doughnut',
data: {
labels: {{ familleProduit|raw }},
datasets: [
{
label: '# of Votes',
data: {{ montantProduit|raw }},
backgroundColor: {{ colorProduit|raw }},
borderWidth: 1
}
]
},
options: {
plugins: {
legend: {
display: true,
labels: {
color: 'rgb(100, 99, 132)'
}
}
}
}
});
	</script>

	<script>
		var ctx = document.getElementById('donutClient').getContext('2d');
var myChart = new Chart(ctx, {
type: 'doughnut',
data: {
labels: {{ familleClient|raw }},
datasets: [
{
label: '# of Votes',
data: {{ montantClient|raw }},
backgroundColor: {{ colorClient|raw }},
borderWidth: 1
}
]
},
options: {
plugins: {
legend: {
display: true,
labels: {
color: 'rgb(100, 99, 132)'
}
}
}
}
});
	</script>

{% endblock %}
