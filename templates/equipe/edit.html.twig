{% extends 'base.html.twig' %}
{% block title %}
	{{ title }}
{% endblock %}
{% block body %}
	<div class="card collapsed-card card-info">
		<div class="card-header">
			<h3 class="card-title">
				<i class="icon fas fa-info-circle"></i>
				Info</h3>
			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<p>La création d'équipe permet l'alimentation des affaires</p>
		</div>
	</div>
	<div class="card card-dark">
		<div class="card-header">
			<h3 class="card-title">
				Modifier une équipe
			</h3>
			<div class="card-tools">
				<a class="btn btn-sm btn-success" href='{{path('app_equipe') }}'>Retourner à la liste des équipes</a>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			{{ form_start(form)}}
			<div class="form-group d-flex flex-wrap">
				<div class="d-flex flex-wrap mx-auto">
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom) }}
					{{ form_errors(form.nom) }}
					{{ form_label(form.textColor)}}
					{{ form_widget(form.textColor)}}
					{{ form_label(form.backgroundColor)}}
					{{ form_widget(form.backgroundColor)}}
					{{ form_widget(form.creer)}}
				</div>
			</div>
			{{ form_end(form)}}
		</div>
	</div>

{% endblock %}
