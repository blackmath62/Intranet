{% extends 'base.html.twig' %}
{% block title %}
	{{ title }}
{% endblock %}
{% block body %}
	<div class="card collapsed-card card-info">
		<div class="card-header">
			<h3 class="card-title">
				<i class="icon fas fa-info-circle"></i>
				Info</h3>
			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<p>La création d'équipe permet l'alimentation des affaires</p>
		</div>
	</div>
	<div class="card collapsed-card card-dark">
		<div class="card-header">
			<h3 class="card-title">
				Créer une équipe
			</h3>
			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			{{ form_start(form)}}
			<div class="form-group d-flex flex-wrap">
				<div class="d-flex flex-wrap mx-auto">
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom) }}
					{{ form_errors(form.nom) }}
					{{ form_label(form.textColor)}}
					{{ form_widget(form.textColor)}}
					{{ form_label(form.backgroundColor)}}
					{{ form_widget(form.backgroundColor)}}
					{{ form_widget(form.creer)}}
				</div>
			</div>
			{{ form_end(form)}}
		</div>
	</div>


	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Equipes</h3>
			<div class="card-tools">
				<a href='{{path('app_affaire_me_nok' ) }}' class="ml-2 text-light btn btn-xl btn-success">
					Voir les Affaires
				</a>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body p-0">
			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Couleur texte</th>
						<th>Couleur fond</th>
						<th>rendu</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% for equipe in equipes %}
						<tr>
							<td>{{ equipe.nom}}</td>
							<td>{{ equipe.textColor}}</td>
							<td>{{ equipe.backgroundColor}}</td>
							<td>
								<a class='btn btn-sm' style="background-color: {{ equipe.backgroundColor }}; color: {{ equipe.textColor }};">{{ equipe.nom}}</a>
							</td>
							<td>
								<a href='{{path('app_edit_equipe', {'id' : equipe.id } ) }}' class="ml-2 text-light btn btn-xl btn-warning">
									<i class="fas fa-edit"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->

{% endblock %}
