{% extends 'base.html.twig' %}

{% block title %}Dépôt de congés pour un ou plusieurs salarié(s){% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card card-dark collapsed-card">
            <div class="card-header">
                <h3 class="card-title text-center">Dépôt de congés pour un ou plusieurs salarié(s)</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
        <!-- /.card-header -->
        <div class="card-body">
            {{ form_start(form) }}
            <div class="d-flex flex-wrap">
                {{ form_label(form.start) }}
                {{ form_widget(form.start) }}
                {{ form_widget(form.sliceStart) }}
                {{ form_label(form.end) }}
                {{ form_widget(form.end) }}
                {{ form_widget(form.sliceEnd) }}
                {{ form_label(form.holidayType) }}
                {{ form_widget(form.holidayType) }}
            </div>

            <div class="mailbox-controls float-right">
                <button type="button" id="selectAll" class="btn btn-default btn-sm checkbox-toggle">Selectionner/déselectionner tout<i class="ml-4 far fa-square"></i></button>
            </div>
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="text-center"><span>Nom de l'utilisateur</span></th>
                            <th class="text-center"><span>Email de l'utilisateur</span></th>
                            <th class="text-center"><span>Service</span></th>
                            <th class="text-center"><span>Cocher</span></th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for user in form.user %}
                        <tr>
                            {% for thisUser in users %}
                            {% if user.vars.value == thisUser.id %}
                            <td class="text-center"> {{ thisUser.pseudo }}</td>
                            <td class="text-center"><a href='mailto:{{ thisUser.Email }}'>{{ thisUser.Email }}</a></td>
                            <td class="text-center"><div class="btn btn-sm" style="background-color: {{ thisUser.service.color }}; color: {{ thisUser.service.textColor }}";>{{ thisUser.service.title }}</div></td>
                            {% endif %}
                            {% endfor %}
                            <td class="text-center">{{ form_widget( user ) }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            <!-- /.table -->
            </div>
            <!-- /.mail-box-messages -->
            <div class="text-right p-5">{{ form_widget(form.Envoyer) }}</div>
        {{ form_end(form) }}
        </div>
    </div>
</div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card card-dark">
            <div class="card-header d-flex">
                <h3 class="card-title text-center">Nombres de jours de congés acceptés pour chaque salariés</h3>
                <a href="{{ path('app_holiday_list') }}" class="badge badge-success ml-auto">Retourner à la liste</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                {{ form_start(formDates) }}
			  <div class="d-flex flex-wrap justify-content-around p-2">
			  	<div><strong>Veuillez selectionner la période : </strong></div>
				<div>{{ form_widget(formDates.startDate) }}</div>
				<div>{{ form_widget(formDates.endDate) }}</div>
				<div>{{ form_widget(formDates.filtrer) }}</div>
			  </div>
				<hr>
				{{ form_end(formDates) }}

                {% if listCountConges %}

                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr class='text-center'>
                    <th>Utilisateur</th>
                    <th>Mail</th>
                    <th>Congés Payés</th>
                    <th>RTT</th>
                    <th>Sans Solde</th>
                    <th>Familial</th>
                    <th>Maternité</th>
                    <th>Décés</th>
                    <th>Déménagement</th>
                    <th>Autre</th>
                    <th>Total</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for listCountConge in listCountConges %}
                  <tr class='text-center'>
                    <td>{{listCountConge.pseudo}}</td>
                    <td><a href='mailto:{{listCountConge.email}}'>{{listCountConge.email}}</a></td>
                    <td class="table-info">{{listCountConge.conges}}</td>
                    <td class="table-light">{{listCountConge.rtt}}</td>
                    <td class="table-info">{{listCountConge.sansSolde}}</td>
                    <td class="table-light">{{listCountConge.famille}}</td>
                    <td class="table-info">{{listCountConge.maternite}}</td>
                    <td class="table-light">{{listCountConge.deces}}</td>
                    <td class="table-info">{{listCountConge.demenagement}}</td>
                    <td class="table-light">{{listCountConge.autre}}</td>
                    <td class="table-primary">{{listCountConge.total}}</td>
                  </tr>
                  {% endfor %}
                  </tbody>
                </table>


                    {% else %}
                        <h5 class="text-left text-dark"><i class="fas fa-info-circle pr-2 text-info"></i>Pas de Congés Acceptés pour cette période !</h5>
                    {% endif %}
                    
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}

<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,"order": [[ 0, "desc" ]],
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
	$("#example3").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,"order": [[ 0, "desc" ]],
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example3_wrapper .col-md-6:eq(0)');
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": false,
      "info": true,
      "autoWidth": false,
      "responsive": true,
    });
  });
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
$('#selectAll').click(function(e) {
    if($(this).hasClass('checkedAll')) {
      $('input').prop('checked', false);   
      $(this).removeClass('checkedAll');
    } else {
      $('input').prop('checked', true);
      $(this).addClass('checkedAll');
    }
});
</script>
{% endblock %}

