{% extends 'base.html.twig' %}

{% block title %} {{title}} {% endblock %}

{% block body %}

<section class="content-header">
		<div class="container-fluid">
			<div class="card card-dark"> <!--collapsed-card-->
				<div class="card-header d-flex">
					<h3 class="card-title">Création/Modification sociétés</h3>
                    <a href="{{ path('app_admin_parameter') }}" class="badge badge-success ml-auto">Retourner aux paramétres</a>
					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse">
							<i class="fas fa-plus"></i>
						</button>
					</div>
					<!-- /.card-tools -->
				</div>
				<!-- /.card-header -->
				<div class="row card-body">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title text-center mr-auto">Création de société</h3>
							</div>

							{{ form_start(formSociete)}}
							<div class="d-flex flex-wrap card-body">
								<div class="form-group col-4"></div>
								{{ form_row(formSociete.nom, {'attr' : {'placeholder' : "Nom de la société", 'class' : "form-control"}})}}
								<button type="submit" class="btn btn-lg btn-dark mx-auto ">Créer la société</button>
							</div>
							{{ form_end(formSociete)}}
							<div class="card-header d-flex">
								<h3 class="card-title text-center mr-auto">Modification des sociétés</h3>
								<a href="{{ path('app_admin') }}" class="badge badge-success ml-auto">Retourner à l'Administration générale</a>
							</div>
							<!-- /.card-header -->
							<div class="">
								<table id="example1" class="table table-bordered table-striped">
									<thead>
										<tr>
											<th class="text-center">
												<span>id</span>
											</th>
											<th class="text-center">
												<span>Nom</span>
											</th>
											<th class="text-center">
												<span>Action</span>
											</th>
										</tr>
									</thead>
									<tbody>
										{% for societe in societes %}
											<tr>
												<!--todo gérer le changement de l'id du bouton du POST -->
													<td class="text-center">
														<a class="text-center">{{ societe.id }}</a>
													</td>
													<td class="text-center">
														{{societe.nom}}
													</td>
													<td class="text-center">
														<a href="{{ path('app_edit_societe', {'id' : societe.id}) }}" type="button" class="btn btn-warning">
															<i class="fas fa-edit"></i></a>
														<a href="{{ path('app_delete_societe', {'id' : societe.id}) }}" type="button" class="btn btn-danger">
															<i class="fas fa-trash-alt"></i>
														</a>
													</td>
											</tr>
										{% endfor %}
									</tbody>
									<tfoot>
										<tr>
											<th class="text-center">
												<span>id</span>
											</th>
											<th class="text-center">
												<span>Nom</span>
											</th>
											<th class="text-center">
												<span>Action</span>
											</th>
										</tr>
									</tfoot>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}


