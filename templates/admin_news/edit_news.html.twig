{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}

<div class="col-md-12">
		<!-- general form elements disabled -->
		<div class="card card-dark">
			<div class="card-header d-flex">
				<h3 class="card-title text-white">Modification d'une News</h3>
				<a href="{{ path('app_admin_news') }}" class="badge badge-success ml-auto">Retourner Ã  la liste d'une News'</a>
			</div>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form">
					<div class="form-group col-12">
						{{ form_row(form.title, {'attr' : {'class' : "form-control"}})}}
					</div>
					<div class="form-group col-12">
						{{ form_row(form.content, {'attr' : {'class' : "form-control"}})}}
					</div>
				</div>
				<div class="form-group mx-auto pt-5">
					<button type="submit" class="btn btn-lg btn-dark mx-auto ">Modifier la publication</button>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
</div>

{% endblock %}
