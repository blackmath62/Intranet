{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
<div class="card collapsed-card card-warning">
    <div class="card-header">
        <h3 class="card-title"><i class="icon fas fa-exclamation-triangle"></i> Avertissement</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
                  <p></p>
    <!-- /.card-footer-->
    </div>
</div>
                
<div class="row">
            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header d-flex justify-content-between">
                        <h2 class="card-title">Liste des produits de la piéce</h2>
                      
                        <a title = 'Retourner à la liste des piéces à alimenter' href="{{ path('app_fsc_attached_file') }}" class="btn btn-danger ml-auto"><i class="fas fa-thumbs-down"></i></a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
							{% if details %}
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center"><span>Date Pièce</span></th>
                                    <th class="text-center"><span>Type Pièce</span></th>
                                    <th class="text-center"><span>Numéro Pièce</span></th>
                                    <th class="text-center"><span>Tiers</span></th>
                                    <th class="text-center"><span>Ref</span></th>
                                    <th class="text-center"><span>Sref1</span></th>
                                    <th class="text-center"><span>Sref2</span></th>
                                    <th class="text-center"><span>Désignation</span></th>
                                </tr>
                            </thead>
                            <tbody>
                            
                                {% for detail in details %}
                                {% if detail.codePiece == 2 %}
                                {% set p = 'Commande' %}
                                {% elseif detail.codePiece == 3 %}
                                {% set p = 'Bon de livraison' %}
                                {% elseif detail.codePiece == 4 %}
                                {% set p = 'Facture' %}      
                                {% endif %}
                                {% set codePiece = detail.codePiece %}
                                {% set numPiece = detail.num %}
                                {% set tiers = detail.tiers %}
                                    <tr>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.datePiece|date("d/m/Y") }}</a>
                                        </td> 
                                        <td class="text-center">
                                            <a class="text-dark">{{ p }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.num }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.tiers}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.ref}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.sref1}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.sref2}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ detail.designation}}</a>
                                        </td>                                       
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="text-center"><span>Date Pièce</span></th>
                                    <th class="text-center"><span>Type Pièce</span></th>
                                    <th class="text-center"><span>Numéro Pièce</span></th>
                                    <th class="text-center"><span>Tiers</span></th>
                                    <th class="text-center"><span>Ref</span></th>
                                    <th class="text-center"><span>Sref1</span></th>
                                    <th class="text-center"><span>Sref2</span></th>
                                    <th class="text-center"><span>Désignation</span></th>
                                </tr>
                                </tr>
                            </tfoot>
                        </table>
                                {% else %}
                                     <h4 class="text-left text-dark"><i class="fas fa-info-circle pr-2 text-primary"></i>Aucunes details à traiter actuellement, Félicitation !</h4>
                            {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header d-flex justify-content-between">
                        <h2 class="card-title">Liste des documents pour le FSC liés à la piéce</h2>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                    {% set docs = documents.file|length %}
							{% if docs > 0 %}
                                <table id="example2" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th class="text-center"><span>Nom du document</span></th>
                                            <th class="text-center"><span>Action</span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            {% for docs in documents.file %}
                                            <tr>
                                                <td class="text-center">
                                                    <a class="text-left" href="{{ asset('/doc/Roby/Fsc/' ~ docs.file ) }}" class="text-dark">{{ docs.file }}</a></br>
                                                </td>
                                                <td class="text-center">
                                                    <a href="{{ asset('/doc/Roby/Fsc/' ~ docs.file ) }}" class="btn btn-info btn-xl"><i class="fas fa-download" download></i></a>
                                                    <a class="btn btn-danger btn-xl" data-toggle="modal" data-target="#modal-default"><i class="fas fa-trash-alt"></i></a>
                                                        <div class="modal fade" id="modal-default">
                                                            <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                <h4 class="modal-title">Voulez vous vraiment supprimer ce document ?</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                <p>Cette action est irréversible !&hellip;</p>
                                                                </div>
                                                                <div class="modal-footer justify-content-between">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                                                <a type="button" href="{{ path('app_document_fsc_delete', {id: docs.id })}}" class="btn btn-danger">Supprimer</a>
                                                                </div>
                                                            </div>
                                                            <!-- /.modal-content -->
                                                            </div>
                                                            <!-- /.modal-dialog -->
                                                        </div>
                                                        <!-- /.modal -->
                                                </td>                                       
                                            </tr>
                                            {% endfor %}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th class="text-center"><span>Nom du document</span></th>
                                            <th class="text-center"><span>Action</span></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            {% else %}
                                     <h4 class="text-left text-dark"><i class="fas fa-exclamation-triangle pr-2 text-danger"></i>Aucuns documents sur cette piéce, merci d'alimenter !</h4>
                            {% endif %}
                    </div>
                </div>
            </div>
        </div>

<div class="row">
    <div class="col-md-12">
    <div class="card card-dark">
        <div class="card-header d-flex justify-content-between">
            <h2 class="card-title">Ajouter des documents</h2>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
        {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
        <div class="input-group">
        <div class="custom-file">
          {{ form_label(form.file) }}
          {{ form_widget(form.file) }}
          {{ form_errors(form.file) }}
        </div>
        <div class="input-group-append">
        {{ form_widget(form.envoyer, {'label': "Télécharger des fichiers", 'attr' : { 'class': 'btn btn-outline-secondary mb-3' }}) }}
        </div>
    </div>
        {{ form_rest(form) }}
      {{ form_end(form) }}
     </div>
</div>
    </div>
</div>
{% endblock %}


