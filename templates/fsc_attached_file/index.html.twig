                                <td class="text-center">
                                    <a class="text-dark">{{ piece.createdAt|time_diff(piece.updatedAt) }}</a>
                                </td>
                                <td class="text-center">
                                    <a class="text-dark">{{ piece.utilisateur }}</a>
                                </td>
                                <td class="text-center">
                                {% set count = 0 %}
                                {% for typePiece in typePieces %}
                                    {% if piece.id == typePiece.idMov %}
                                        {% set count = count + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if count > 4 %}
                                    {% set val = 'text-success' %}
                                {% else %}
                                    {% set val = 'text-danger' %}
                                {% endif %}
                                
