{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
<div class="card collapsed-card card-warning">
    <div class="card-header">
        <h3 class="card-title"><i class="icon fas fa-exclamation-triangle"></i> Avertissement</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
                  <p></p>
    <!-- /.card-footer-->
    </div>
</div>
                
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-dark">                
            <div class="card-header d-flex justify-content-between flex-wrap">
                    <h3 class="card-title text-white">Changer le type de document importé</h3>
                    {% if piece.codePiece == 4 %}
                        {% set p = piece.numFact %}
                        {% elseif piece.codePiece == 3 %}
                        {% set p = piece.numBl %}    
                        {% elseif piece.codePiece == 2 %}
                        {% set p = piece.numCmd %}   
                    {% endif %}                      
                    <a href='{{path('app_fsc_show', {'num' : p, 'type' : piece.codePiece, 'tiers' : piece.tiers } ) }}' class="badge badge-success ml-auto">Retourner au détail de la piéce {{ piece.id }}</a>
            </div>
            

            <!-- /.card-header -->
            <div class="card-body">
            <div>Document : <a class="text-left" href="{{ asset('/doc/Roby/Fsc/' ~ doc.file ) }}" class="text-dark">{{ doc.file }}</a></br></div>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.title) }}
                {{ form_widget(form.modifier) }}
                {{ form_end(form) }}
                    
            </div>
        </div>
    </div>
</div>
{% endblock %}


