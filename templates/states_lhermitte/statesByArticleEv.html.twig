{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}

<div class="row">
            <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header d-flex justify-content-between ">
                        <h3 class="card-title text-center">Détail des ventes du client {{ nom }} =>  {{ mois }} - {{ annee -1}} / {{ annee }}</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center"><span>Ref</span></th>
                                    <th class="text-center"><span>Désignation</span></th>
                                    <th class="text-center"><span>Sref1</span></th>
                                    <th class="text-center"><span>Sref2</span></th>
                                    <th class="text-center"><span>U.V</span></th>
                                    {% if annee %}
                                    <th class="text-center"><span>{{ mois }} - {{ annee -1 }}</span></th>
                                    {% else %}
                                    <th class="text-center"><span>Année N-1</span></th>  
                                    {% endif %}

                                    <th class="text-center"><span>Delta %</span></th>

                                    {% if annee %}
                                    <th class="text-center"><span>{{ mois }} - {{ annee }}</span></th>
                                    {% else %}
                                    <th class="text-center"><span>Annee Selectionnée</span></th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
							
                                {% for state in states %}
                                    <tr id="<?= $id ?>">
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.ref}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.des }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.sref1 }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.sref2 }}</a>
                                        </td>
                                         <td class="text-center">
                                            <a class="text-center text-dark">{{ state.uv }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.AnneeN1|number_format(2) }} €</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.Delta|number_format(2) }} %</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-center text-dark">{{ state.AnneeN|number_format(2) }} €</a>
                                        </td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                            <tfoot>
                                <tr>
                                  <th class="text-center"><span>Ref</span></th>
                                    <th class="text-center"><span>Désignation</span></th>
                                    <th class="text-center"><span>Sref1</span></th>
                                    <th class="text-center"><span>Sref2</span></th>
                                    <th class="text-center"><span>U.V</span></th>
                                    {% if annee %}
                                    <th class="text-center"><span>{{ mois }} - {{ annee -1 }}</span></th>
                                    {% else %}
                                    <th class="text-center"><span>Année N-1</span></th>  
                                    {% endif %}

                                    <th class="text-center"><span>Delta %</span></th>

                                    {% if annee %}
                                    <th class="text-center"><span>{{ mois }} - {{ annee }}</span></th>
                                    {% else %}
                                    <th class="text-center"><span>Annee Selectionnée</span></th>
                                    {% endif %}
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
