{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}

<div class="col-md-12">
		<!-- general form elements disabled -->
		<div class="card card-dark">
			<div class="card-header d-flex">
				<h3 class="card-title text-white">Modification du type de congés</h3>
				<a href="{{ path('app_admin_annuaire') }}" class="badge badge-success ml-auto">Retourner à la liste des types de congés</a>
			</div>
			<div class="card-body">
				{{ form_start(holidayTypeEditForm) }}
				<div class="form">
					<div class="row">
						<div class="form-group col-2">
							{{ form_row(holidayTypeEditForm.name, {'attr' : {'class' : "form-control"}})}}
							{{ form_row(holidayTypeEditForm.color) }}
						</div>
					</div>
				</div>
				<div class="text-center">
				{{ form_row(holidayTypeEditForm.Modifier, {'attr' : {'class' : "btn btn-dark float-right"}})}}
				</div>
				{{form_end(holidayTypeEditForm)}}
			</div>
		</div>
	</div>
</div>

{% endblock %}
