{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<section class="content-header">
		<div
			class="container-fluid">
			<!-- /.card -->
			<div class="row">
				<div class="col-12">
					<div class="card card-dark">
						<div class="card-header">
							<h3 class="card-title text-center mr-auto">Liste des utilisateurs</h3>
						</div>
						<!-- /.card-header -->
						<div class="card-body">
							<table id="example2" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th class="text-center">
											<span>societe</span>
										</th>
										<th class="text-center">
											<span>email</span>
										</th>
										<th class="text-center">
											<span>Date de création</span>
										</th>
										<th class="text-center">
											<span>pseudo</span>
										</th>
										<th class="text-center">
											<span>roles</span>
										</th>
										<th class="text-center">
											<span>Actions</span>
										</th>
									</tr>
								</thead>
								<tbody>
									{% for user in users %}
										<tr>
											<form method="POST">
												<td class="text-center">
													{{ user.societe.nom }}
												</td>
												<td class="text-center">
													{{ user.email }}
												</td>
												<td class="text-center">
													{{ user.createdAt | date("d/m/Y") }}
												</td>
												<td class="text-center">
													{{ user.pseudo }}
												</td>
												<td class="text-center">
													{% for role in user.roles %}
														{{ role }}
													{% endfor %}
												</td>
												<td class="text-center">
													<a class="btn btn-warning" href="{{ path('app_edit_user', {'id' : user.id}) }}">Modifier</a>
													<button type="button" class="btn btn-danger" data-toggle="modal" data-target={{"#modal-sm#{user.id}"}}>Supprimer</button>
													<!-- /.modal -->
													<div class="modal fade" id={{"modal-sm#{user.id}"}}>
														<div class="modal-dialog modal-sm">
															<div class="modal-content">
																<div class="modal-header">
																	<h4 class="modal-title">Voulez vous vraiment supprimer cette utilisateur ?</h4>
																	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																		<span aria-hidden="true">&times;</span>
																	</button>
																</div>
																<div class="modal-body">
																	<p>{{user.pseudo}}&hellip;</p>
																</div>
																<div class="modal-footer justify-content-between">
																	<button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
																	<a href="{{ path('app_delete_user', {'id' : user.id}) }}" type="button" class="btn btn-primary">Supprimer</a>
																</div>
															</div>
															<!-- /.modal-content -->
														</div>
														<!-- /.modal-dialog -->
													</div>
													<!-- /.modal -->
												</td>
											</form>

										{% endfor %}
									</tr>
								</tbody>
								<tfoot>
									<tr>
										<th class="text-center">
											<span>societe</span>
										</th>
										<th class="text-center">
											<span>email</span>
										</th>
										<th class="text-center">
											<span>Date de création</span>
										</th>
										<th class="text-center">
											<span>pseudo</span>
										</th>
										<th class="text-center">
											<span>roles</span>
										</th>
										<th class="text-center">
											<span>Actions</span>
										</th>
									</tr>
								</tfoot>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
