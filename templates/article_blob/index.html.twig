{% extends 'base.html.twig' %}
{% block title %}
	{{ title }}
{% endblock %}
{% block body %}

	<div class="card collapsed-card card-info">
		<div class="card-header">
			<h3 class="card-title">
				<i class="icon fas fa-info-circle pr-2"></i>Informations utiles</h3>
			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<p>Cette liste permet de contrôler les articles ouverts qui commencent par un prefixe donnée</p>
			<p>L'intérêt est un contrôle plus rapide pour mise à jour/correction de la table achat.</p>
		</div>
		<!-- /.card-footer-->
	</div>


	<div class="row">
		<div class="col-md-12">
			<div
				class="card card-dark">
				<!-- /.card-header -->
				<div class="card-header d-flex justify-content-between ">
					<h3 class="card-title text-center">Liste des articles ouvertes avec le préfixe ...</h3>
					<div class="card-tools">
						{{ form_start(search, { 'attr' : { 'class' : 'ml-auto' }}) }}
																																																
																																																		Recherche des références produits qui commencent par :

						{{ form_row(search.search) }}

						{{ form_row(search.fournisseurs) }}

						{{ form_row(search.filtrer, { 'attr' : { 'class' : 'btn btn-xl btn-secondary' }}) }}

						{{ form_end(search)}}
					</div>
				</div>
				<div class="card-body">
					{% if articles %}
						<table id="example1" class="table table-bordered table-striped">
							<thead>
								<tr>
									<th class="text-center">
										<span>Tiers</span>
									</th>
									<th class="text-center">
										<span>Ref</span>
									</th>
									<th class="text-center">
										<span>Désignation</span>
									</th>
									<th class="text-center">
										<span>Sref1</span>
									</th>
									<th class="text-center">
										<span>Sref2</span>
									</th>
									<th class="text-center">
										<span>Uv</span>
									</th>
									<th class="text-center">
										<span>Famille</span>
									</th>
									<th class="text-center">
										<span>Métier</span>
									</th>
									<th class="text-center">
										<span>Tva</span>
									</th>
									<th class="text-center">
										<span>Confidentialité</span>
									</th>
									<th class="text-center">
										<span>Stock</span>
									</th>
									<th class="text-center">
										<span>texte</span>
									</th>
								</tr>
							</thead>
							<tbody>


								<!-- >boucle -->
								{% for article in articles %}
									<tr>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.tiers }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.ref }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.designation }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.sref1 }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.sref2 }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.uv }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.famille }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.metier }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.tva }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.conf }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.stock }}</a>
										</td>
										<td class="text-center">
											<a class="text-center text-dark">{{ article.blob|raw }}</a>
										</td>
									</tr>
								{% endfor %}
								<!-- >boucle -->

							</tbody>
						</table>
					{% else %}
						<h4 class="text-left text-dark">
							<i class="fas fa-info-circle pr-2 text-primary"></i>Veuillez alimenter le champs de recherche</h4>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
