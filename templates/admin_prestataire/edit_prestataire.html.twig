{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}

	<div
		class="col-md-12">
		<!-- general form elements disabled -->
		<div class="card card-dark">
			<div class="card-header d-flex">
				<h3 class="card-title text-white">Modification d'un prestataire</h3>
				<a href="{{ path('app_admin_prestataire') }}" class="badge badge-success ml-auto">Retourner Ã  la liste des prestataires</a>
			</div>
			<div class="card-body">
				{{ form_start(prestataireEditForm) }}
				<div class="form">
					<div class="row">
						<div class="form-group col-12 col-md-2">
							{{ form_row(prestataireEditForm.nom, {'attr' : {'class' : "form-control"}})}}
						</div>
						<div class="form-group col-12 col-md-2">
							{{ form_row(prestataireEditForm.email, {'attr' : {'class' : "form-control"}})}}
						</div>
						<div class="form-group col-12 col-md-2">
							{{ form_row(prestataireEditForm.phone, {'attr' : {'class' : "form-control"}})}}
						</div>
						<div class="form-group col-12 col-md-2">
							{{ form_row(prestataireEditForm.affiliation, {'attr' : {'class' : "form-control"}})}}
						</div>
						<div class="form-group col-12 col-md-1">
							{{ form_row(prestataireEditForm.color) }}
						</div>
						<div class="form-group col-12 col-md-3">
							{{ form_row(prestataireEditForm.img, {'attr' : {'class' : "form-control"}})}}
						</div>
					</div>
				</div>
				<div class="text-center">
					<div class="form-group pt-5">
						<button type="submit" class="btn btn-lg btn-dark float-right">Modifier le prestataire</button>
					</div>
				</div>
				{{form_end(prestataireEditForm)}}
			</div>
		</div>
	</div>
</div>{% endblock %}
