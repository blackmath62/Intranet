{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}
{% block body %}
	<!-- form collapse fermé de base -->
	<div class="card collapsed-card card-dark">
		<div class="card-header">
			<h3 class="card-title">Ajout d'un document</h3>

			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			{{ form_start(form)}}
			{{ form_row(form.file)}}
			{{ form_row(form.importer)}}
			{{ form_end(form)}}
		</div>
		<!-- /.card-footer-->
	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="card card-gray">
				<div class="card-header">
					<h3 class="card-title text-center">Guide de lecture Référenciel Phyto</h3>
				</div>
				<!-- /.card-header -->
				<div class="card-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th class="text-center">
									<span>Document</span>
								</th>
								<th class="text-center">
									<span>Déposé par</span>
								</th>
								<th class="text-center">
									<span>Déposé le</span>
								</th>
								<th class="text-center">
									<span>Action</span>
								</th>
							</tr>
						</thead>
						<tbody>
							{% for doc in docs %}
								<tr>
									<td class="">
										<a class="text-center text-dark">{{ doc.file }}</a>
									</td>
									<td class="text-center">
										<a class="text-center btn btn-sm">{{ doc.user.pseudo }}</a>
									</td>
									<td class="text-center">
										<a class="text-center btn btn-sm">{{ doc.createdAt|date("Y/m/d")}}</a>
									</td>
									<td class="text-center">

										<a target="_blank" href="{{ asset('doc/Lhermitte_freres/Afnor/' ~ doc.file)}}" class="text-center btn btn-sm btn-info text-white">
											<i class="far fa-eye"></i>
										</a>
										<a href=" {{path('app_audit_afnor_delete', {'id' : doc.id} ) }}" class="text-center btn btn-sm btn-danger text-white">
											<i class="far fa-trash-alt"></i>
										</a>
									</td>
								{% endfor %}
							</tr>

						</tbody>
						<tfoot>
							<tr>
								<th class="text-center">
									<span>Document</span>
								</th>
								<th class="text-center">
									<span>Déposé par</span>
								</th>
								<th class="text-center">
									<span>Déposé le</span>
								</th>
								<th class="text-center">
									<span>Action</span>
								</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>

	<div class="card card-dark+">
		<div class="card-header">
			<h3 class="card-title">D3 et D8 Liste produits PPP avec AMM et stock</h3>
		</div>
		<!-- /.card-header -->
		<div class="card-body">
			<table id="example3" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Référence</th>
						<th>Désignation</th>
						<th>Uv</th>
						<th>AMM</th>
						<th>Stock</th>
					</tr>
				</thead>
				<tbody>
					{% for listephyto in listephytos %}
						<tr>
							<td>{{ listephyto.ref}}</td>
							<td>{{ listephyto.designation}}</td>
							<td>{{ listephyto.uv}}</td>
							<td>{{ listephyto.amm}}</td>
							<td>{{ listephyto.stock }}</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<th>Référence</th>
						<th>Désignation</th>
						<th>Uv</th>
						<th>AMM</th>
						<th>Stock</th>
					</tr>
				</tfoot>
			</table>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->

{% endblock %}
