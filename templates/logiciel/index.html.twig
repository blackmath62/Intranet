{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}

	<section class="content-header">
		<div class="container-fluid">
			<div
				class="card card-dark">
				<!--collapsed-card-->
				<div class="card-header d-flex">
					<h3 class="card-title">Création/Modification Logiciels</h3>
					<a href="{{ path('app_admin_parameter') }}" class="badge badge-success ml-auto">Retourner aux paramétres</a>
					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse">
							<i class="fas fa-plus"></i>
						</button>
					</div>
					<!-- /.card-tools -->
				</div>
				<!-- /.card-header -->
				<div class="row card-body">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title text-center mr-auto">Création d'un Logiciel</h3>
							</div>

							{{ form_start(formLogiciel)}}
							<div class="d-flex flex-wrap card-body">
								<div class="form-group col-12"></div>

								<label>{{ form_label(formLogiciel.nom) }}:</label>
								{{ form_widget(formLogiciel.nom, {'attr' : {'placeholder' : "Nom du logiciel", 'class' : "form-control"}})}}


								<label>{{ form_label(formLogiciel.backgroungColor) }}:</label>
								<div class="input-group my-colorpicker2">
									{{ form_widget(formLogiciel.backgroungColor, {'attr' : {'placeholder' : "Couleur du logiciel", 'class' : "form-control"}}) }}
									<div class="input-group-append">
										<span class="input-group-text">
											<i class="fas fa-square"></i>
										</span>
									</div>
								</div>
                                <label>{{ form_label(formLogiciel.textColor) }}:</label>
								<div class="input-group my-colorpicker2">
									{{ form_widget(formLogiciel.textColor, {'attr' : {'placeholder' : "Couleur du texte logiciel", 'class' : "form-control"}}) }}
									<div class="input-group-append">
										<span class="input-group-text">
											<i class="fas fa-square"></i>
										</span>
									</div>
								</div>
								<label>{{ form_label(formLogiciel.icon) }}: <a href='https://fontawesome.com/'> www.fontawesome.com </a></label>
								{{ form_widget(formLogiciel.icon, {'attr' : {'placeholder' : "Icone fa-*****", 'class' : "form-control"}})}}


								<button type="submit" class="btn btn-lg btn-dark mx-auto m-5">Créer un logiciel</button>

							</div>
							{{ form_end(formLogiciel)}}
							<div class="card-header">
								<h3 class="card-title text-center mr-auto">Modification des logiciels</h3>
							</div>
							<!-- /.card-header -->
							<div class="">
								<table id="example1" class="table table-bordered table-striped">
									<thead>
										<tr>
											<th class="text-center">
												<span>id</span>
											</th>
											<th class="text-center">
												<span>Nom</span>
											</th>
                                            <th class="text-center">
												<span>Couleur fond</span>
											</th>
                                            <th class="text-center">
												<span>Couleur Texte</span>
											</th>
                                            <th class="text-center">
												<span>Rendu Texte</span>
											</th>
											<th class="text-center">
												<span>Rendu Icone</span>
											</th>
											<th class="text-center">
												<span>Action</span>
											</th>
										</tr>
									</thead>
									<tbody>
										{% for logiciel in logiciels %}
											<tr>
													<td class="text-center">
														<a class="text-center">{{ logiciel.id}}</a>
													</td>
													<td class="text-center">
														{{logiciel.nom}}
													</td>
                                                    <td class="text-center">
														{{logiciel.backgroungColor}}
													</td>
                                                    <td class="text-center">
														{{logiciel.textColor}}
													</td>
                                                    <td class="text-center">
														<button class="btn btn-xl" style= "background-color: {{ logiciel.backgroungColor }}; color: {{ logiciel.textColor }}";><i class="pr-1 {{ logiciel.icon }}"></i>{{ logiciel.nom }}</button>
													</td>
													<td class="text-center">
														<button class="btn btn-xl" style= "background-color: {{ logiciel.backgroungColor }}; color: {{ logiciel.textColor }}";><i class="{{ logiciel.icon }}"></i></button>
													</td>
													<td class="text-center">
														<a href="{{ path('app_edit_logiciel', {'id' : logiciel.id}) }}" type="button" class="btn btn-warning">
															<i class="fas fa-edit"></i>
														</a>
														<a href="{{ path('app_delete_logiciel', {'id' : logiciel.id}) }}" type="button" class="btn btn-danger">
															<i class="fas fa-trash-alt"></i>
														</a>
													</td>
											</tr>
										{% endfor %}
									</tbody>
									<tfoot>
										<tr>
											<th class="text-center">
												<span>id</span>
											</th>
											<th class="text-center">
												<span>Nom</span>
											</th>
                                             <th class="text-center">
												<span>Couleur fond</span>
											</th>
                                            <th class="text-center">
												<span>Couleur Texte</span>
											</th>
                                            <th class="text-center">
												<span>Rendu Texte</span>
											</th>
											<th class="text-center">
												<span>Rendu Icone</span>
											</th>
											<th class="text-center">
												<span>Action</span>
											</th>
										</tr>
									</tfoot>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
