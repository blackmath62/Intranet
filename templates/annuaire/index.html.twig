								</th>
								<th class="text-center">
									<span>Portable</span>
								</th>
							</tr>
						</thead>
						<tbody>
							{% for annuaire in annuaires %}
								<tr id="<?= $id ?>">
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark" style="max-width: 40px;">{{annuaire.interne}}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{annuaire.nom}}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{ annuaire.exterieur}}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{annuaire.mail}}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{annuaire.fonction}}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{ annuaire.societe }}</a>
									</td>
									<td class="text-center" id="{{ annuaire.id }}">
										<a class="text-center text-dark">{{annuaire.portable}}</a>
									</td>
								{% endfor %}
							</tr>

						</tbody>
						<tfoot>
							<tr>
								<th class="text-center">
									<span>interne</span>
								</th>
