{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
<div class="card collapsed-card card-info">
    <div class="card-header">
        <h3 class="card-title"><i class="icon fas fa-info-circle"></i> Info</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
    </div>
</div>             
<div class="row">
    <div class="col-md-12">
        <div class="card card-danger">
            <div class="card-header d-flex justify-content-between">
                <h2 class="card-title">Liste des Factures Clients FSC sans liaison piéces fournisseurs</h2>
                <a title = 'Metre à jour les données' href="{{ path('app_movement_bill_fsc_update') }}" class="btn btn-primary ml-auto"><i class="fas fa-redo-alt pr-2"></i>Mettre à jour</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                    {% if clients %}
                <table id="example2" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center"><span>facture</span></th>
                            <th class="text-center"><span>Date de facture</span></th>
                            <th class="text-center"><span>Tiers</span></th>
                            <th class="text-center"><span>Nom</span></th>
                            <th class="text-center"><span>notre Référence</span></th>
                            <th class="text-center"><span>Liaison</span></th>
                            <th class="text-center"><span>Actions</span></th>
                        </tr>
                    </thead>
                    <tbody>
                    
                        
                        {% for client in clients %}
                            {% if client.ventilations|length <= 0 %}
                                {% if client.dateFact|date("Y-m-d") >= "now"|date_modify("-5 Years")|date("Y-m-d") %}
                                    <tr>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.facture }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.dateFact|date("d/m/Y") }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.tiers}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.nom}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.notreRef }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.ventilations|length }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a href='{{path('app_movement_bill_fsc_show', {'id' : client.id } ) }}' class="text-light btn btn-xl btn-info"><i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                {% endif %}                       
                            {% endif %}
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-center"><span>facture</span></th>
                            <th class="text-center"><span>Date de facture</span></th>
                            <th class="text-center"><span>Tiers</span></th>
                            <th class="text-center"><span>Nom</span></th>
                            <th class="text-center"><span>notre Référence</span></th>
                            <th class="text-center"><span>Liaison</span></th>
                            <th class="text-center"><span>Actions</span></th>
                        </tr>
                        </tr>
                    </tfoot>
                </table>
                        {% else %}
                                <h4 class="text-left text-dark"><i class="fas fa-info-circle pr-2 text-primary"></i>Aucune facture client Fsc actuellement</h4>
                    {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-success">
            <div class="card-header d-flex justify-content-between">
                <h2 class="card-title">Liste des Factures Clients FSC avec liaison piéces fournisseurs</h2>
                <a title = 'Metre à jour les données' href="{{ path('app_movement_bill_fsc_update') }}" class="btn btn-primary ml-auto"><i class="fas fa-redo-alt pr-2"></i>Mettre à jour</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                    {% if clients %}
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center"><span>facture</span></th>
                            <th class="text-center"><span>Date de facture</span></th>
                            <th class="text-center"><span>Tiers</span></th>
                            <th class="text-center"><span>Nom</span></th>
                            <th class="text-center"><span>notre Référence</span></th>
                            <th class="text-center"><span>Nbres Liaisons</span></th>
                            <th class="text-center"><span>Documentations</span></th>
                            <th class="text-center"><span>Verrou manuel</span></th>
                            <th class="text-center"><span>Actions</span></th>
                        </tr>
                    </thead>
                    <tbody>
                    
                        
                        {% for client in clients %}
                            {% if client.ventilations|length > 0 %}
                                {% if client.dateFact|date("Y-m-d") >= "now"|date_modify("-5 Years")|date("Y-m-d") %}
                                    <tr>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.facture }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.dateFact|date("d/m/Y") }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.tiers}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.nom}}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.notreRef }}</a>
                                        </td>
                                        <td class="text-center">
                                            <a class="text-dark">{{ client.ventilations|length }}</a>
                                        </td>
                                        {% set status = 'fas fa-check-circle text-success' %}
                                        {% for sta in client.ventilations %}
                                            {% if sta.status == false %}
                                                {% set status = 'fas fa-times-circle text-danger' %}
                                            {% endif %}   
                                        {% endfor %}
                                        
                                        <td class="text-center">
                                            <a class="text-dark"><i class='{{ status }}'></i></a>
                                        </td>
                                        {% set probleme = 'fas fa-check text-success' %}
                                        {% for prob in client.ventilations %}
                                            {% if prob.probleme == true %}
                                                {% set probleme = 'fas fa-exclamation-triangle text-danger' %}
                                            {% endif %}   
                                        {% endfor %}
                                        <td class="text-center">
                                            <a class="text-dark"><i class='{{ probleme }}' ></i></a>
                                        </td>
                                        <td class="text-center">
                                            <a href='{{path('app_movement_bill_fsc_show', {'id' : client.id } ) }}' class="text-light btn btn-xl btn-info"><i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endif %}                       
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-center"><span>facture</span></th>
                            <th class="text-center"><span>Date de facture</span></th>
                            <th class="text-center"><span>Tiers</span></th>
                            <th class="text-center"><span>Nom</span></th>
                            <th class="text-center"><span>notre Référence</span></th>
                            <th class="text-center"><span>Nbres Liaisons</span></th>
                            <th class="text-center"><span>Documentations</span></th>
                            <th class="text-center"><span>Verrou manuel</span></th>
                            <th class="text-center"><span>Actions</span></th>
                        </tr>
                        </tr>
                    </tfoot>
                </table>
                        {% else %}
                                <h4 class="text-left text-dark"><i class="fas fa-info-circle pr-2 text-primary"></i>Aucune facture client Fsc actuellement</h4>
                    {% endif %}
            </div>
        </div>
    </div>
</div>



{% endblock %}


