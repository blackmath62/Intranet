{% if articles %}
<p><u><strong>Les articles qui vont être fermés : </strong></u></p>
    <table class="table table-bordered table-striped" cellspacing="0" cellpadding="10" border="1">
        <thead>
            <tr class="text-center">
            <th>Ref</th>
            <th>Sref1</th>
            <th>Sref2</th>
            <th>Designation</th>
            <th>Uv</th>
            <th>Fournisseur</th>
