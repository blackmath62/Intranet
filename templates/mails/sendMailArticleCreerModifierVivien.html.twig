            <th>Art Modification</th>
            <th>Sart Création</th>
            <th>Sart Modification</th>
        </thead>
        <tbody>
{% for article in articles %}
        <tr>
            <td>{{ article.Ref }}</td>
            <td>{{ article.Sref1 }}</td>
            <td>{{ article.Sref2 }}</td>
            <td>{{ article.Designation }}</td>
            <td>{{ article.Uv }}</td>
            <td>{{ article.Fournisseur }}</td>
            <td>{{ article.ArtUserCreation }}</td>
            <td>{{ article.ArtUserModification }}</td>
            <td>{{ article.SartUserCreation }}</td>
            <td>{{ article.SartUserModification }}</td>
        </tr>
{% endfor %}
       </tbody>
    </table>
{% endif %}

